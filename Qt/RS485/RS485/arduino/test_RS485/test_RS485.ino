
//--------------------------------------------------------------------------------
#define serial_RS485  Serial3
//--------------------------------------------------------------------------------
int pin_DIR = 8;
//--------------------------------------------------------------------------------
void setup()
{
  serial_RS485.begin(9600);

  pinMode(pin_DIR, OUTPUT);

  digitalWrite(pin_DIR, HIGH);
}
//--------------------------------------------------------------------------------
void loop()
{
  serial_RS485.println("test_RS485");
  delay(1000);
}
