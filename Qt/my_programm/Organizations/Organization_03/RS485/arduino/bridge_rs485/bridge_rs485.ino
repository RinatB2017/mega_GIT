int pin_485   = 2;
//int pin_485   = 13;

int imcomingByte = 0;
//--------------------------------------------------------------------------------
void write_RS485()
{
  digitalWrite(pin_485, HIGH);
}
//--------------------------------------------------------------------------------
void read_RS485()
{
  digitalWrite(pin_485, LOW);
}
//--------------------------------------------------------------------------------
void serialEvent()
{
  while (Serial.available())
  {
    // считываем байт
    imcomingByte = Serial.read();
    Serial.write(imcomingByte);
  }
}
//--------------------------------------------------------------------------------
void setup()
{
  Serial.begin(57600);

  pinMode(pin_485,  OUTPUT);

  read_RS485();
}
//--------------------------------------------------------------------------------
void loop()
{
  delay(100);
}
