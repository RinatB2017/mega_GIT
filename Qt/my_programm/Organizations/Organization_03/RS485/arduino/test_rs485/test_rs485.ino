//--------------------------------------------------------------------------------
int pin_485   = 2;
//int pin_485   = 13;
//--------------------------------------------------------------------------------
void write_RS485()
{
  digitalWrite(pin_485, HIGH);
}
//--------------------------------------------------------------------------------
void read_RS485()
{
  digitalWrite(pin_485, LOW);
}
//--------------------------------------------------------------------------------
void setup()
{
  Serial.begin(57600);

  pinMode(pin_485,    OUTPUT);
  read_RS485();
}
//--------------------------------------------------------------------------------
void loop()
{
  write_RS485();
  delay(10);
  Serial.println("HIGH");
  delay(10);
  read_RS485();
  
  delay(1);
  Serial.println("LOW");
  
  delay(1000);
}
