//--------------------------------------------------------------------------------
int pin_485   = 8;

int led_blink = 10;
int led_pump  = 11;
int led_relay = 12;
//--------------------------------------------------------------------------------
void write_RS485()
{
  digitalWrite(pin_485, HIGH);
}
//--------------------------------------------------------------------------------
void read_RS485()
{
  digitalWrite(pin_485, LOW);
}
//--------------------------------------------------------------------------------
void setup()
{
  Serial.begin(9600);

  pinMode(pin_485,    OUTPUT);

  pinMode(led_blink,  OUTPUT);
  pinMode(led_pump,   OUTPUT);
  pinMode(led_relay,  OUTPUT);

  read_RS485();
}
//--------------------------------------------------------------------------------
void loop()
{
  write_RS485();
  delay(1);
  Serial.println("HIGH");
  read_RS485();
  
  delay(1);
  Serial.println("LOW");
  
  delay(1000);
}
